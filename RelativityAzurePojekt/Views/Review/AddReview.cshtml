@{
}

@model RelativityAzurePojekt.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<h2>Create Review</h2>

@using (Html.BeginForm("AddReview", "Review", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.MovieID)
    @Html.HiddenFor(x => x.AppUserID)
    <div class="form-group">
        @Html.LabelFor(model => model.Stars)
        @Html.EditorFor(model => model.Stars, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Stars, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Opinion)
        @Html.TextAreaFor(model => model.Opinion, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Opinion, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

